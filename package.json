{
  "name": "dhbot",
  "version": "1.0.0",
  "main": "src/main.ts",
  "scripts": {
    "dev": "npx nodemon",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production tsx ./src/main.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/core/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:dev": "docker build --target development -t culibear-bot:dev . && docker run --env-file .env.dev culibear-bot:dev",
    "docker:prod": "docker build --target production -t culibear-bot:prod . && docker run --env-file .env culibear-bot:prod",
    "docker:build:dev": "docker build --target development -t culibear-bot:dev .",
    "docker:build:prod": "docker build --target production -t culibear-bot:prod ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/lodash": "^4.17.20",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.15.16",
    "@types/pg": "^8.15.4",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "discord.js": "^14.19.3",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.45.1",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "pg": "^8.17.2",
    "winston": "^3.17.0"
  }
}